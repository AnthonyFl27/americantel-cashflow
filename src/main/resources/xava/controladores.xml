<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE controladores SYSTEM "dtds/controladores.dtd">

<controladores>

    <!-- Controlador de Venta con acción para imprimir reporte -->
    <controlador nombre="Venta">
        <!-- Hereda todos los botones típicos (Nuevo, Grabar, Borrar, etc.) -->
        <hereda-de controlador="Typical"/>

        <accion
                nombre="imprimirVentas"
                clase="org.example.americantelcashflow.acciones.ImprimirReporteVentasAction"
                modo="ALL"/>
    </controlador>

    <controlador nombre="Producto">
        <hereda-de controlador="Typical"/>

        <accion
                nombre="imprimirProductos"
                clase="org.example.americantelcashflow.acciones.ImprimirReporteProductosAction"
                modo="list">
        </accion>
    </controlador>

    <controlador nombre="Cliente">
        <hereda-de controlador="Typical"/>

        <accion
                nombre="imprimirCliente"
                clase="org.example.americantelcashflow.acciones.ImprimirReporteClientesAction"
                modo="list">
        </accion>
    </controlador>

    <controlador nombre="Caja">
        <hereda-de controlador="Typical"/>

        <accion
                nombre="imprimirCaja"
                clase="org.example.americantelcashflow.acciones.ImprimirReporteCajaAction"
                modo="list">
        </accion>
    </controlador>
</controladores>
